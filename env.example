# YouTube Q&A API Environment Variables

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=512

# Proxy Configuration (Optional)
TOR_PROXY_IP=your_ec2_public_ip
TOR_PROXY_PORT=9050

# CORS Configuration
ALLOWED_ORIGINS=chrome-extension://your-extension-id,https://your-domain.com

# Rate Limiting
RATE_LIMIT_PER_MINUTE=10
RATE_LIMIT_PER_HOUR=100

# Flask Configuration
FLASK_ENV=production
SECRET_KEY=your_secret_key_here
PORT=5000

# Database Configuration (if needed)
DATABASE_URL=sqlite:///youtube_qa.db

# Logging
LOG_LEVEL=INFO
LOG_FILE=youtube_qa_api.log

# Security
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True