{
    "manifest_version": 3,
    "name": "YouTube Q&A Assistant",
    "version": "1.0.0",
    "description": "Ask questions about YouTube videos and get AI-powered answers from transcripts",
    
    "permissions": [
        "activeTab",
        "storage"
    ],
    
    "host_permissions": [
        "https://*.youtube.com/*",
        "https://your-api-domain.com/*"
    ],
    
    "action": {
        "default_popup": "popup.html",
        "default_title": "YouTube Q&A Assistant",
        "default_icon": {
            "16": "icons/icon16.png",
            "32": "icons/icon32.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    
    "content_scripts": [
        {
            "matches": ["https://*.youtube.com/*"],
            "js": ["content.js"],
            "css": ["content.css"],
            "run_at": "document_idle"
        }
    ],
    
    "background": {
        "service_worker": "background.js"
    },
    
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self';"
    }
}